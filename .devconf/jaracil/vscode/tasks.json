{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {"reveal":"always"},
    "tasks": [
        {
            "label": "flash",
            "type": "shell",
            "command": "make flash"
        },
        {
            "group": {
                "kind":"build",
                "isDefault": true},
            "label": "build",
            "type": "shell",
            "command": "make -j4",
            "problemMatcher": {
				"fileLocation": "absolute",
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
        }
    ]

}